<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shuame="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_new_background_bg">

    <LinearLayout
        android:id="@+id/ll_prepare_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_titlebar" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/string_content_description"
            android:paddingTop="@dimen/titlebar_bottom_space"
            android:src="@drawable/homepage_prepare_root_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="@string/homepage_not_root_text"
            android:textColor="@color/textcolor_dark_black"
            android:textSize="@dimen/sp_18" />

        <Button
            android:id="@+id/btn_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/homepage_login_btn_height"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_new_def_fill_button"
            android:text="@string/homepage_prepare_root_btn_text"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3">

            <TextView
                android:id="@+id/v_introduce"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="@string/bbx_title_pre_root"
                android:textColor="@color/textcolor_dark_green"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>
    </LinearLayout>

    <include
        layout="@layout/view_bbx"
        android:visibility="visible" />
</RelativeLayout>
