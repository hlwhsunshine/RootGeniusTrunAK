<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shuame="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/view_titlebar"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="82dp" android:layout_marginTop="15dp">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_logo" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginLeft="10dp" android:src="@drawable/def_logo_icon" android:contentDescription="@string/string_content_description"/>
