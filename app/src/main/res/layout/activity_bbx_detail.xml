        <com.shuame.rootgenius.p115ui.view.TextProgressBar android:id="@+id/tpb_detail_progress" android:layout_width="match_parent" android:layout_height="@dimen/homepage_login_btn_height" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:progress="50" android:progressDrawable="@drawable/app_detail_progressbar" android:layout_centerInParent="true" shuame:textSize="16" style="?android:attr/progressBarStyleHorizontal"/>
    </RelativeLayout>
</LinearLayout>
