<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:shuame="http://schemas.android.com/apk/res-auto" android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20sp" android:textColor="#ff4d4d4d" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="title" android:lineSpacingExtra="6dp"/>
    <ImageView android:id="@+id/tv_content_img" android:layout_width="match_parent" android:layout_height="110dp" android:layout_marginTop="12dp" android:contentDescription="@string/string_content_description"/>
    <TextView android:textSize="17sp" android:textColor="#ff666666" android:id="@+id/tv_content_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="content" android:lineSpacingExtra="6dp"/>
    <LinearLayout android:gravity="right" android:id="@+id/btn_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
        <Button android:textSize="17sp" android:textColor="#ff666666" android:gravity="center" android:id="@+id/btn_cancel" android:background="@drawable/selector_dialog21_btn_" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="cancel"/>
        <Button android:textSize="17sp" android:textColor="#ff666666" android:gravity="center" android:id="@+id/btn_ok" android:background="@drawable/selector_dialog21_btn_" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ok"/>
    </LinearLayout>
</LinearLayout>
